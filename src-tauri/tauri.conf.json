{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "clippy",
  "version": "0.1.0",
  "identifier": "com.sanjo.clippy",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "maximizable": false,
        "title": "clippy",
        "width": 300,
        "height": 370
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "clipboard": {
      "clipboardManager": {
        "allow-read-text": true,
        "allow-write-text": true
      }
    }
  }
}
